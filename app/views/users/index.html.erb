<h1>Find Friends</h1>
<br>

<!-- search path is not working! wtf! -->
<div class="search_button">
  <%= form_tag('users_path', method: 'get') do %>
    <%= label_tag(:find_friend, 'Search for friend') %>
    <%= text_field_tag(:friend, params[:find_friend]) %>
    <%= submit_tag('Search') %>
  <% end %>
</div>


<table>
  <thead>
    <tr>
      <th><h3>Users</h3></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% if current_user %>
          <td><%= link_to 'Add Friend', friendships_path(friend_id: user), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

