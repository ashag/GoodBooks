<p id="notice"><%= notice %></p>

<h1>My profile:</h1>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Friends:</h2>
<ul>
	<% for friendship in @user.friendships %>
		<li><%= friendship.friend.name %>
		<%= link_to 'remove', friendship, method: :delete %></li>
	<% end %>
</ul>

<h2>Friended by Users:</h2>
<ul>
	<% for user in @user.inverse_friends %>
		<li><%= user.name %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
