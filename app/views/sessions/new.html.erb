<h1>Log in</h1>

<% form_tag sessions_path do %>
<p>
	<%= label_tag :email %>
	<%= text_field_tag :email, params[:email] %>
</p>
<p>
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</p>
<p class='button'>
	<%= sumbit_tag 'Log in' %> </p>
<% end %>

New User? <%= link_to 'Sign up', sign_up_path %>